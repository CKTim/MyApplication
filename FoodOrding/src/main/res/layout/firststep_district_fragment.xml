<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_zhongcan"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/blank"
            android:scaleType="centerCrop"
            android:src="@mipmap/district1" />

        <ImageView
            android:id="@+id/iv_xican"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/iv_zhongcan"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/district2" />

        <ImageView
            android:id="@+id/iv_korea"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/iv_xican"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/district3"/>

        <ImageView
            android:id="@+id/iv_japanese"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/iv_korea"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/district4" />
    </RelativeLayout>
</ScrollView>